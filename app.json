{
  "name": "FFDC Sample Corporate Banking Web App",
  "description": "FFDC Sample Corporate Banking Web App",
  "repository": "https://github.com/fusionfabric/ffdc-sample-corporate-webapp",
  "env": {
    "OIDC_CLIENT_ID": {
      "description": "Client ID"
    },
    "OIDC_CLIENT_SECRET": {
      "description": "Client Secret"
    },
    "OIDC_ORIGIN": {
      "description": "URL of the deployed application",
      "value": "https://REPLACE_WITH_APP_NAME.herokuapp.com"
    },
    "OIDC_ISSUER": {
      "description": "Issuer",
      "value": "https://api.fusionfabric.cloud/login/v1/sandbox"
    },
    "OIDC_TOKEN_URL": {
      "description": "Token url",
      "value": "https://api.fusionfabric.cloud/login/v1/sandbox/oidc/token"
    },
    "FFDC": {
      "description": "FFDC Tenant",
      "value": "https://api.fusionfabric.cloud"
    },
    "FAST_BUILD": {
      "description": "If defined, it will retrieve the build from last successful Github Action ran, instead of building everything again",
      "value": "true",
      "required": false
    }
  }
}
